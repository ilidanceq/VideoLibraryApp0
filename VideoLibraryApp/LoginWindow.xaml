<Window x:Class="VideoLibraryApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="600" Width="585"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush TileMode="None" ImageSource="/_e37633bc-c4a3-42c8-8ac8-048778ac32d7.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Login" FontSize="20" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Label Content="Username:"/>
            <TextBox x:Name="usernameTextBox" Margin="0,0,0,10"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="passwordBox" Margin="0,0,0,10"/>
            <Button Content="Login" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
